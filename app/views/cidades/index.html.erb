<center>
<div class="container-fluid">
	<% if @cidades.size > 0 %>
		<div class="col-md-10">
	 		<h2>Cidades Cadastradas</h2>
		</div>
		<div class="col-md-10">
			<% @cidades.each do |cidade| %>
				<div class="span6">
					<p><h3 class="text-left"><%= cidade.nome %></h3></p>
						<td class="text-center">
							<%= link_to edit_cidade_path(cidade), class:'btn btn-link' do %>
	                    		<i class="glyphicon glyphicon-edit"> Editar</i>
	                  		<% end %>
	                  		<%= link_to cidade_path(cidade), method: :delete, data:{confirm: "Deseja remover esse Registro?"}, class:'btn btn-link' do %>
	                    		<i class="glyphicon glyphicon-remove-sign"> Remover</i>
	                  		<% end %>
              			</td>
		 			<!-- <h3>Uf: <%= cidade.uf %></h3> -->
				</div>
			<% end %>
		</div>
	<% else %>
		<div class="jumbotron">
			<h3>NÃ£o hÃ¡ cidades cadastradas!</h3>
		</div>
	<% end %>
		<div class="col-md-8">
			<p><%= link_to admin_path, class:'btn btn-link' do %>
	 			<i class="glyphicon glyphicon-home"> Voltar</i>
				<% end %>
			</p>
		</div>
</div>
</center>